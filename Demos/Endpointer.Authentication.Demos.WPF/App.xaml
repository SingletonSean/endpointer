<Application
    x:Class="Endpointer.Demos.WPF.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="ColorPrimary">#00306e</Color>

            <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}" />

            <Style x:Key="Header" TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="28" />
            </Style>
            <Style x:Key="Container" TargetType="Grid">
                <Setter Property="MaxWidth" Value="1000" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
